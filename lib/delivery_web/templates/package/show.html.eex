<div class="ui message">
  <div style="float: right;">
    <%= button("Edit", to: Routes.live_path(@conn, PackageLive.Edit, @package), method: "get", class: "ui button mini")  %>  
  </div>
  <div class="header">
    <%= @package.title %>
  </div>
  
  <p><%= @package.description %></p>
  <p>Version: <%= @package.version %></p>
</div>

<div class="ui message">

  <div style="float: right;">
    <%= button("New", to: Routes.activity_path(@conn, :new, @package.id), method: "get", class: "ui button tiny primary")  %>
    <%= button("Publish all", to: Routes.activity_path(@conn, :publish_all, @package.id), method: :get, data: [confirm: "Are you sure?"], class: "ui button tiny") %>
  </div>

  <div class="header">
    Activities
  </div>
  <%= render DeliveryWeb.ActivityView, "index.html", assigns %>
</div>
